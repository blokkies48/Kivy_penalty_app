#: import MapView kivy.garden.mapview
<PenaltiesView>
    on_enter: root.load_content()
    
    BoxLayout:
        orientation: 'vertical'
        padding: 15
        spacing: 15
        ScrollView:
            do_scroll_x: False
            do_scroll_y: True
            id: scrollview
            
            GridLayout:
                cols: 1
                spacing: 20
                padding: 20
                height: self.minimum_height
                width: self.minimum_width
                size_hint_y: None
                # The map
                BoxLayout:
                    size_hint: 1, None
                    height: 300
                    disabled: 'True'
                    MapView:
                        id: map
                        MapMarkerPopup:
                            id: marker
                            source: "map_pin.png"

                MDRectangleFlatButton:
                    id: officer_on_duty
                    text: "Officer's name"
                    size_hint: 1, None  
                    text_color: 'grey'
                    line_color: 'grey'
                    on_press:
                        root.select_officer()
                MDTextField:
                    id: penalty
                    hint_text: "Penalty"
                    multiline: False
                MDTextField:
                    id: site
                    hint_text: "Site's name"
                    multiline: False

                MDTextField:
                    id: report
                    hint_text: "Report"
                    multiline: True

                MDLabel:
                    id: supervisor
                    color: "grey"
                MDLabel:
                    id: date
                    color: "grey"
                MDLabel:
                    id: time
                    color: "grey"
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1,None
                    padding: 20
                    spacing: 20
                    MDRectangleFlatButton:
                        text: "SIGN"
                        on_press: root.sign()
                    Label:
                        id: signed
                
        
        GridLayout:
            cols: 2
            padding: 15
            spacing: 15
            size_hint: 1, .1
            MDRaisedButton:
                size_hint: 1, None
                text: 'Back'

                on_press:
                    root.back()           
            MDRaisedButton:
                size_hint: 1, None
                text: 'Save'

                on_press:
                    root.back()           
                    