<ErrorView>
    BoxLayout:
        orientation: 'vertical'
        padding: 25
        MDLabel:
            text: "Database Error Please Reload App. \nThis most likely due to not being logged in \nand no network connection."
            halign: 'center'
            font_size: 24
            color: 'red'
            size_hint: 1, 0.2
        MDLabel:
            text: "If error presist please contact the administrator.\nWith the error code shown below."
            halign: 'center'
            font_size: 20
            size_hint: 1, 0.2
            
        MDLabel:
            id: error_type
            halign: 'center'
            size_hint: 1, 0.2
        MDRaisedButton:
            text: 'Close App'
            text_color: 'black'
            pos_hint: {'center_x': 0.5,'center_y': 0.4}
            on_press:
                root.reload()

                