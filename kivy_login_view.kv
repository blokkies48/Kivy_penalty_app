<LoginView>
    on_enter: root.on_start()
    Screen:
        MDCard:
            radius: [20]
            size_hint: .9,.7
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            padding: 15
            spacing: 15
            orientation: 'vertical'
            Image:
                source: 'logo.png'
            MDLabel:
                text: "LOGIN"
                halign: "center"
                font_size: 28
                pos_hint: {'center_x': 0.5, 'center_y': 0.8}   
            MDTextField:
                id: user_name
                hint_text: "User Name"
                icon_left: "account"
                multiline: False

            BoxLayout:
                orientation: 'horizontal'

                MDTextField:
                    id: user_password
                    hint_text: 'Password'
                    password: True
                    icon_left: "key-variant"
                    multiline: False

                MDIconButton:
                    icon: "eye-off"
                    #pos_hint: {'center_x': 0.9, 'center_y': 1}
                    on_release:
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                        user_password.password = False if user_password.password is True else True

            MDLabel:
                id: login_error
                    
            MDRaisedButton:
                text: "Login"
                pos_hint: {"center_x": .5}
                size_hint: 1, None
                on_press:
                    root.login(user_name,user_password) 
    MDLabel:
        pos_hint: {'center_x': 0.5, 'center_y': 0.1}
        halign: "center"
        color: "grey"
        text: "Contact admin if you forgot your password"